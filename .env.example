# App
NODE_ENV=development
PORT=3000
JWT_SECRET=change_me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_me_too
JWT_REFRESH_EXPIRES_IN=30d

# DB
DATABASE_URL=postgresql://user:pass@localhost:5432/nest_premium

# Google OAuth (client-side obtains id_token; backend verifies here)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Apple Sign In (prepare for iOS)
APPLE_CLIENT_ID=com.your.app.service
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY_BASE64=BASE64_ENCODED_P8

# Google Play Billing
GOOGLE_PLAY_PACKAGE_NAME=com.yourcompany.yourapp
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}
GOOGLE_PLAY_PRODUCTS=premium_monthly,premium_yearly

# Redis (opcional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
