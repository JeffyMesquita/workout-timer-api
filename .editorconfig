# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON files
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

# YAML files (GitHub Actions, Docker Compose)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package manager files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Prisma schema
[*.prisma]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Git files
[.gitignore]
end_of_line = lf

# ESLint and Prettier config
[.{eslintrc,prettierrc}*]
indent_style = space
indent_size = 2

# Environment files
[.env*]
end_of_line = lf
insert_final_newline = true
